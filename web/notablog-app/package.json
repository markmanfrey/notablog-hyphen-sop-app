{
  "name": "noteablog-app",
  "version": "0.8.0",
  "description": "Generate a minimalistic blog from a Notion.so table.",
  "author": "dragonman225",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "noteablog-app": "bin/cli.js"
  },
  "scripts": {
    "build": "npm run build:module && npm run build:doc",
    "build:module": "rm -rf dist && rollup -c && tsc --emitDeclarationOnly",
    "build:doc": "npm run build:dependency-graph",
    "build:dependency-graph": "npx depcruise --exclude '^node_modules' --output-type dot --prefix 'https://github.com/dragonman225/noteablog-app/tree/master/' src/index.ts | dot -T svg > assets/deps_graph.svg",
    "build:tsviz": "tsviz src/ntable.ts assets/ntable.png",
    "dev": "rollup -cw",
    "test": "ts-node --skip-project --log-error test/ntable.spec.ts",
    "test:renderer": "ts-node --skip-project --log-error test/renderer/renderer.spec.ts",
    "release": "npm run build && npm publish",
    "release:beta": "npm run build && npm publish --tag beta",
    "upgrade": "node tools/upgrade-deps.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dnpr/cli": "^2.0.0",
    "@dnpr/fsutil": "^0.1.3",
    "@dnpr/logger": "^0.2.0",
    "@dnpr/task-manager": "^1.0.0",
    "ejs": "^3.1.6",
    "nast-util-from-notionapi": "1.4.2",
    "nast-util-to-react": "1.4.2",
    "redis": "^4.6.7",
    "squirrelly": "^8.0.8",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@rollup/plugin-typescript": "^8.2.3",
    "@tsconfig/node16": "^1.0.2",
    "@types/ejs": "^3.1.0",
    "@types/node": "^16.4.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "dependency-cruiser": "^11.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "nast-types": "1.2.1",
    "prettier": "^2.2.1",
    "rollup": "^2.53.3",
    "ts-node": "^10.1.0",
    "tsviz": "^1.0.11",
    "typescript": "^4.3.5",
    "zora": "^3.1.8"
  },
  "files": [
    "dist/",
    "assets/"
  ],
  "keywords": [
    "nodejs",
    "notion",
    "blog"
  ],
  "homepage": "https://github.com/dragonman225/noteablog-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/dragonman225/noteablog-app.git"
  },
  "bugs": {
    "url": "https://github.com/dragonman225/noteablog-app/issues"
  },
  "engines": {
    "node": ">=15"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown -w"
  }
}
